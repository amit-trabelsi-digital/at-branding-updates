# ========================
# Docker Environment Variables
# ========================
# העתק קובץ זה ל-.env ועדכן את הערכים

# ========================
# Database Configuration (חיצוני)
# ========================
DATABASE_URL=mongodb://username:password@external-host:27017/mental-coach?authSource=admin

# ========================
# API Configuration
# ========================
NODE_ENV=development
API_PORT=3000
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=90d
JWT_COOKIE_EXPIRES_IN=90

# External API Keys
EXTERNAL_API_KEYS=your-api-key-here,another-api-key

# ========================
# Email Service (SendGrid)
# ========================
SENDGRID_API_KEY=your-sendgrid-api-key
EMAIL_FROM=noreply@yourdomain.com

# ========================
# SMS Service (Twilio)
# ========================
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# ========================
# Admin Panel Configuration
# ========================
ADMIN_PORT=9977
# כתובת ה-API עבור האדמין (לשרת חיצוני)
ADMIN_API_URL=https://your-external-api.com/api

# ========================
# Flutter Web Configuration
# ========================
FLUTTER_PORT=8080
FLUTTER_ENV=docker
# כתובת ה-API עבור פלאטר (לשרת חיצוני)
FLUTTER_API_URL=https://your-external-api.com/api

# Firebase Web Configuration
FIREBASE_WEB_API_KEY=your-firebase-api-key
FIREBASE_WEB_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_WEB_PROJECT_ID=your-project-id
FIREBASE_WEB_STORAGE_BUCKET=your-project.appspot.com
FIREBASE_WEB_MESSAGING_SENDER_ID=123456789
FIREBASE_WEB_APP_ID=your-app-id

# ========================
# Docker Scripts Configuration
# ========================
NPM_SCRIPT=dev  # או 'start' לפרודקשן