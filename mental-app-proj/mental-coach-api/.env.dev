PORT=3000
NODE_ENV=development

# Database Configuration - DEV
MONGO_URI_DEV=mongodb://localhost:27017/mental-coach-dev
DB_NAME=mental-coach-dev

# Firebase Configuration - DEV PROJECT
# NOTE: Replace with your dev Firebase project credentials
FIREBASE_PRIVATE_KEY=your_dev_firebase_private_key_here
